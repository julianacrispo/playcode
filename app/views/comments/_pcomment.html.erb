 <% if current_user %>
      <%= form_for [@product, @comment] do |f| %>
          <%= f.text_field :body, placeholder: "Comment on the brand" %>
           <%= f.submit "Say it", class: 'btn btn-success' %>
    <% end %>
    <% else %>
      <p> <%= link_to "sign in", new_user_session_path %> or 
          <%= link_to "sign up", new_user_registration_path %> to comment on this brand</p>
    <% end %>
      
      <!-- Comment Table -->
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <p><td> <%= comment.body %> </td>
            <td> 
              <small> 
                posted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user %>
                | <%= link_to "Delete", [@product, comment], method: :delete %>
            </small> </p>
          </td>
            <td>
           
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div> 