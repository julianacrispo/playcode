

<div class="content">
  <div id="buns" class="transitions-enabled">
    <% @products.each do |product| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(product.image.url(:medium)), product %>
        <div class="panel-body">
          <p><%= product.name %> | <%= product.comments.count %> comments </p>

          <%= link_to 'Edit', edit_product_path(product) %>
          <!-- todo: add authorization for delete button -->
          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </div>
      </div>
    <% end %>
  </div>
</div>



