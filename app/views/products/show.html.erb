
<div class="show-container"
  <div class="row">
    <div class="col-md-6">

        <%= image_tag @product.image.url(:medium) %>
      <p>
        <p><%= @product.name %> </p>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %> |
        <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
      <% if current_user %>
    <%= form_for [@product, @comment] do |f| %>
        <%= f.text_field :body, placeholder: "Comment on this brand" %>
         <%= f.submit "Add", class: 'btn btn-success' %>
     <% end %>
     <% else %>
      <p> please <%= link_to "sign in", new_user_session_path %> or 
          <%= link_to "sign up", new_user_registration_path %> to add comments on this brand</p>
    <% end %>
      <tbody>

        <% @comments.each do |comment| %>
          <tr>
            <p><td> <%= comment.body %> </td>
            <td> 
              <small> 
                posted <%= time_ago_in_words(comment.created_at) %> ago 
                | <%= link_to "Delete", [@product, comment], method: :delete %>
            </small></p>
          </td>
            <td>
           
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div> 

<div class="col-md-6">
<%= form_for @vendor, html: {multipart: true } do |f| %>

    <%= f.file_field :image %>

    <%= f.submit "add vendor logo", class: 'btn btn-default'%>
<% end %>

<% @product.vendors.each do |vendor| %>
<%= vendor.vendor_name %>
<% end %>




 </div> <!-- row end -->
<!-- show container end -->

