
<div class = "container">
  <% if is_user? %>
     <h4>  <%= current_user.name %>'s Comments </h4>
  <% current_user.comments.each do |comment| %>
    <p><%= comment.body %> posted <%= time_ago_in_words(comment.created_at) %> about
    <% if comment.commentable.nil? %>
      UNATTACHED COMMENT PLEASE CONTACT THE SYS ADMIN
    <% else %>
    <%= comment.commentable.name if comment.commentable_type == 'Product' %>
    <%= comment.commentable.vendor_name if comment.commentable_type == 'Vendor' %>
    <% end %>
      </p>
  <% end %>
<% end %>
</div>
