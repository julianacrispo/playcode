
<% if is_user? %>
  <% Product.all.each do |product| %>
    <% if @vendor.product_ids.include?(product.id) %>
    <%= link_to image_tag(product.image.url(:thumb)), product %>
    <% end %>
  <% end %>
<% else %>
  <% Product.take(2).each do |product| %>
    <% if @vendor.product_ids.include?(product.id) %>
      <%= link_to image_tag(product.image.url(:thumb)), product %>
    <% end %>

  <% end %> 
    <p> To See the Comprehensive List <%= link_to "Sign In", new_user_session_path %>  / <%= link_to "Sign Up", new_user_registration_path %>  </p>
<% end %>